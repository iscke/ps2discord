    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
    },
    "include": [
        "*.js"
    ]
}
